    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "debug server",
            "type": "debugpy",
            "request": "launch",
            "program": "game_server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "debug client",
            "type": "debugpy",
            "request": "launch",
            "program": "frontend_web_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/game_client_web"
        }
    ]
}